# NexSon Backend – Environment Variables
# Copy this file to .env and fill in your values

# MongoDB connection string
# Get a free cluster at https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://YOUR_USER:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/nexson?retryWrites=true&w=majority

# JWT Secret — use a long random string (e.g., openssl rand -base64 32)
JWT_SECRET=your_very_long_secret_key_here_change_this

# Server port
PORT=3001

# Frontend origin (for CORS)
# For local dev: http://localhost:5500 or http://127.0.0.1:5500
# For production: your domain
ALLOWED_ORIGIN=http://localhost:5500
